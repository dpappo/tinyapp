<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success justify-content-between">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>

        <!-- <div class="nav justify-content-end"> -->
        <% if (username) { %>
          <a class="nav-link text-dark disabled" href="#">Username: <%- username %></a>
          <form class="form-inline my-2 my-lg-0" action="/logout" method="POST">
            <button class="btn btn-outline-dark my-2 my-sm-0">Logout</button>
          </form>

          <% } else { %>
            <form class="form-inline my-2 my-lg-0" action="/login" method="POST">
              <input type="text" name="username" class="form-control mr-sm-2">
              <button class="btn btn-outline-dark my-2 my-sm-0">Sign in</button>
            </form>
            <% } %>
              <!-- </div> -->
      </div>
    </div>
  </nav>
</header>